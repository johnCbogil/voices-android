<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
    <com.mobilonix.voices.util.AvenirTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reps_name"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="@color/voices_orange"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reps_image"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps_party"
                android:textSize="15sp"/>
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps_district"
                android:textSize="15sp"/>
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps_election_date"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>