<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/representatives_list_image"
        android:src="@drawable/voices_icon"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/representatives_list_name_text"
            android:text="Representative"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/representatives_list_location_text"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="District"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:id="@+id/representatives_list_call_image"
                android:layout_weight="0.33"
                android:src="@drawable/voices_icon"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0.33"
                android:id="@+id/representatives_list_email_image"
                android:layout_gravity="left"
                android:src="@drawable/voices_icon"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0.33"
                android:id="@+id/representatives_list_twitter_image"
                android:layout_gravity="left"
                android:src="@drawable/voices_icon"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>