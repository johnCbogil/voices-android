<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/representatives_list_image"
        android:src="@android:drawable/ic_menu_search"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <com.mobilonix.voices.util.AvenirTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/representatives_list_name_text"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="left"
                android:id="@+id/representatives_list_call_image"
                android:layout_weight="0.33"
                android:src="@drawable/phone_icon"
                android:tint="@color/voices_orange"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.33"
                android:id="@+id/representatives_list_email_image"
                android:layout_gravity="left"
                android:src="@drawable/mail_icon"
                android:tint="@color/voices_orange"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0.33"
                android:id="@+id/representatives_list_twitter_image"
                android:layout_gravity="left"
                android:src="@drawable/twitter_icon"
                android:tint="@color/voices_orange"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>