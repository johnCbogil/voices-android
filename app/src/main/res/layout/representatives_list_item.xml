<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/representatives_linear_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/representatives_list_image"
        android:src="@android:drawable/ic_menu_search"
        android:layout_gravity="center_horizontal" />
    <com.mobilonix.voices.util.AvenirTextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/representatives_list_name_text"
        android:layout_marginLeft="5dp"
        android:textSize="24sp"
        android:textColor="#000" />
    <ImageView
        android:layout_gravity="center_horizontal|right"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:id="@+id/more_info_arrow_image"
        android:src="@drawable/right_carat"
        android:tint="@color/voices_orange" />
</LinearLayout>