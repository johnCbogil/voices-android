<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/representatives_linear_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/representatives_list_image"
        android:src="@android:drawable/ic_menu_search"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/representatives_list_name_text"
                android:layout_marginLeft="5dp"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_weight="0.75"/>
            <ImageView
                android:layout_gravity="right|center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/more_info_arrow_image"
                android:src="@drawable/right_carat"
                android:tint="@color/voices_orange"
                android:layout_weight="0.25"/>
    </LinearLayout>
        <com.mobilonix.voices.util.AvenirTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/election_upcoming"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/darker_red"
            android:layout_weight="0.75"/>
</LinearLayout>