<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"
        android:orientation="vertical">

        <fragment
            android:id="@+id/place_autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"/>

        <FrameLayout
            android:id="@+id/pager_meta_frame"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Representatives"
                android:id="@+id/representatives_type_text"/>

            <com.mobilonix.voices.representatives.ui.PagerIndicator
                android:id="@+id/pager_indicator"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|center">
            </com.mobilonix.voices.representatives.ui.PagerIndicator>

        </FrameLayout>

        <!-- The primary view for the reps window -->
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:id="@+id/reprsentatives_pager">
        </android.support.v4.view.ViewPager>

        <!-- The primary view for the groups view -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:id="@+id/groups_view"
            android:visibility="gone">
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""/>
        </FrameLayout>

        <!-- Tabs View to switch between above views -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFF"
                android:id="@+id/representatives_tab"
                android:weightSum="1"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:src="@drawable/representatives_tab_icon"
                    android:tint="@color/voices_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Reps"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:id="@+id/groups_tab"
                android:weightSum="1"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:src="@drawable/groups_tab_icon"
                    android:tint="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Groups"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>