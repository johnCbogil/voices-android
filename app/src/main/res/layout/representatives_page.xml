<?xml version="1.0" encoding="utf-8"?>
<com.mobilonix.voices.representatives.ui.RepresentativesPageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/representatives_page_layout_view"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:weightSum="1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_error_page"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/zero_state" />
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/representatives_error_message"
                android:id="@+id/representatives_error_message"
                android:gravity="center|bottom"
                android:maxWidth="300dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:id="@+id/google_are_assholes_layout"
                android:focusableInTouchMode="true">
            </LinearLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:layout_weight="0.9"
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/representatives_list"
                    android:divider="@null"
                    android:dividerHeight="0dp"/>
            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/reps_progress_spinner"
            android:layout_gravity="center" />
    </FrameLayout>
</com.mobilonix.voices.representatives.ui.RepresentativesPageLayout>