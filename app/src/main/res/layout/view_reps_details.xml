<?xml version="1.0" encoding="utf-8"?>
<com.mobilonix.voices.representatives.ui.DetailPageLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/reps_image"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps_name"
                android:textSize="20sp"
                android:gravity="center_vertical"/>
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps_party"
                android:textSize="15sp"/>
            <com.mobilonix.voices.util.AvenirTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reps_district"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <com.mobilonix.voices.util.AvenirTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reps_election_date"
        android:textSize="15sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="left"
            android:id="@+id/representatives_list_call_image"
            android:layout_weight="0.33"
            android:src="@drawable/phone_icon"
            android:tint="@color/voices_orange"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.33"
            android:id="@+id/representatives_list_email_image"
            android:layout_gravity="left"
            android:src="@drawable/mail_icon"
            android:tint="@color/voices_orange"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.33"
            android:id="@+id/representatives_list_twitter_image"
            android:layout_gravity="left"
            android:src="@drawable/twitter_icon"
            android:tint="@color/voices_orange"/>
    </LinearLayout>
</com.mobilonix.voices.representatives.ui.DetailPageLayout>