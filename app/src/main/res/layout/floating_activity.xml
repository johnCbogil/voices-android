<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context=".activities.FloatingActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout3"
        android:background="#f79b37">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Here&apos;s what to say"
            android:id="@+id/floating_activity_text"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="12"
        android:id="@+id/floating_activity_message"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Close"
        android:id="@+id/feedback_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/floating_activity_message"
        android:background="#f79b37"
        android:textAllCaps="false"
        android:layout_marginBottom="25dp"
        android:textColor="@android:color/white"
        android:onClick="onClick"/>
</RelativeLayout>

