<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context="com.mobilonix.voices.VoicesMainActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/primary_toolbar"
            android:background="#FFF"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_width="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/primary_toolbar_basic_controls"
                android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/primary_toolbar_back_arrow"
                        android:src="@drawable/ic_action_previous_item"
                        android:tint="@color/voices_orange"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/representatives_help_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/help_icon"/>
                    <com.mobilonix.voices.util.AvenirButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="@string/save_location"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:id="@+id/save_location_button" />
                    <ImageView
                        android:id="@+id/representatives_info_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center"
                        android:src="@drawable/info_icon"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/action_add_groups"
                        android:src="@drawable/add_groups_icon"
                        android:layout_gravity="right|center" />
                    <com.mobilonix.voices.util.AvenirTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/all_groups_info_text"
                        android:text="@string/all_groups_info"
                        android:textColor="#000"
                        android:visibility="gone"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right|center"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <com.mobilonix.voices.util.AvenirTextView
                            android:layout_width="@dimen/toolbar_option_width"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/action_selection_text"
                            android:layout_gravity="center"
                            android:background="@drawable/button_back_selected"
                            android:text="@string/actions"
                            android:textColor="#FFF"/>
                        <com.mobilonix.voices.util.AvenirTextView
                            android:layout_width="@dimen/toolbar_option_width"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/groups_selection_text"
                            android:background="@drawable/button_back"
                            android:layout_gravity="center"
                            android:text="@string/my_groups"
                            android:textColor="@color/voices_orange"/>
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/toolbar_divider"
            android:background="@color/light_grey"
            android:layout_marginRight="-10dp"
            android:layout_marginLeft="-10dp"
            android:layout_gravity="bottom"
            android:visibility="gone">
        </View>
        <FrameLayout
            android:id="@+id/main_content_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/app_progress_spinner"/>
</FrameLayout>

