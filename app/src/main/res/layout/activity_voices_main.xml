<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context="com.mobilonix.voices.VoicesMainActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/primary_toolbar"
            android:background="@color/voices_orange"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_width="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/primary_toolbar_basic_controls"
                android:layout_marginRight="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/primary_toolbar_back_arrow"
                        android:src="@drawable/ic_action_previous_item"
                        android:tint="#FFF"
                        android:visibility="gone"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/action_add_groups"
                        android:src="@drawable/add_groups_icon"
                        android:layout_gravity="right|center" />
                    <ImageView
                        android:id="@+id/representatives_tab_icon"
                        android:layout_gravity="left"
                        android:src="@drawable/representatives_tab_icon"
                        android:tint="#FFF"
                        android:layout_width="25sp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/groups_tab_icon"
                        android:layout_gravity="center"
                        android:src="@drawable/groups_tab_icon"
                        android:tint="#FFF"
                        android:layout_width="25sp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <com.mobilonix.voices.util.AvenirTextView
                            android:layout_width="@dimen/toolbar_option_width"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/action_selection_text"
                            android:layout_gravity="center"
                            android:background="@drawable/button_back_selected"
                            android:text="@string/actions"
                            android:textColor="#FFF"/>
                        <com.mobilonix.voices.util.AvenirTextView
                            android:layout_width="@dimen/toolbar_option_width"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:id="@+id/groups_selection_text"
                            android:background="@drawable/button_back"
                            android:layout_gravity="center"
                            android:text="@string/my_groups"
                            android:textColor="@color/voices_orange"/>
                    </LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.Toolbar>
        <FrameLayout
            android:id="@+id/main_content_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/app_progress_spinner"/>
</FrameLayout>

