<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginBottom="10dp">

   <com.mobilonix.voices.util.AvenirTextView
        android:id="@+id/response_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/response_title"
        android:textSize="20dp"
        android:background="@color/voices_orange"
        android:textColor="#FFF"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.mobilonix.voices.util.AvenirTextView
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:text="@string/response"
            android:textColor="#000000" />
    </ScrollView>

    <com.mobilonix.voices.util.AvenirButton
        android:id="@+id/info_close_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/info_close_button"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:background="@color/voices_orange"
        />
</LinearLayout>